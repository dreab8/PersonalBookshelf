<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
			font-size: 1.5em;
			margin-right: 0.5em;
			margin-bottom: 0.4em;
			margin-left: 1em;
		}
		
		.value {
			font-size: 1.5em;
			margin-right: 1em;
		}
		
		.title {
			font-weight: bold;
			font-size: 2.0em;
			margin-bottom: 1em;
			text-align: center;
		}
		
		.panel {
			margin-left: auto;
			margin-right: auto;
			margin-top: 2em;
		}
	</ui:style>
	<g:HTMLPanel>
	<g:Label
				styleName="{style.title}">Book Details</g:Label>
	<g:DecoratorPanel>

		<g:VerticalPanel>
			
			<g:HorizontalPanel>
				<g:Label
					styleName="{style.important}">Title:</g:Label>
				<g:TextBox
					styleName="{style.value}"
					ui:field="title"></g:TextBox>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label
					styleName="{style.important}">Author:</g:Label>
				<g:TextBox
					styleName="{style.value}"
					ui:field="author"></g:TextBox>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label
					styleName="{style.important}">Isbn:</g:Label>
				<g:TextBox
					styleName="{style.value}"
					ui:field="isbn"></g:TextBox>
			</g:HorizontalPanel>
			<g:Button text="Save" ui:field="saveButton"></g:Button>
		</g:VerticalPanel>
	</g:DecoratorPanel>
	</g:HTMLPanel>
</ui:UiBinder>
